# GitHub Integration
# Create a personal access token with 'repo' and 'read:org' scopes
# https://github.com/settings/tokens
GITHUB_TOKEN=ghp_your_token_here

# GitHub OAuth (optional, for authentication)
# Create OAuth app: https://github.com/settings/developers
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# Kubernetes Cluster Access
# Get these from your GKE cluster
K8S_CLUSTER_URL=https://your-gke-cluster-endpoint
K8S_SERVICE_ACCOUNT_TOKEN=
K8S_DASHBOARD_URL=
K8S_CA_DATA=

# ArgoCD Integration
# Get the ArgoCD server URL and credentials
ARGOCD_SERVER_URL=https://argocd.yourdomain.com
ARGOCD_USERNAME=admin
ARGOCD_PASSWORD=

# Prometheus Integration
PROMETHEUS_URL=http://prometheus-server.monitoring.svc.cluster.local

# PostgreSQL (Production)
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_USER=backstage
POSTGRES_PASSWORD=backstage
POSTGRES_DB=backstage
